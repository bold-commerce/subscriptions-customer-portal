{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "checkJs": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/api/*": [
        "src/api/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/layouts/*": [
        "src/layouts/*"
      ],
      "@/libs/*": [
        "src/libs/*"
      ],
      "@/helpers/*": [
        "src/helpers/*"
      ],
      "@/interfaces/*": [
        "src/interfaces/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/packages/*": [
        "src/packages/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
    },
    "types": [
      "webpack-env"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
